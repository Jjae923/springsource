<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- 스프링에서 관리하는 객체 : bean -->
	<!-- new SamsungTV()와 같은 역할 : SamsungTV의 객체 생성 -->
	<bean id="tv" class="com.spring.basic.SamsungTV"/> 
	
	<bean id="msg" class="com.spring.basic.MessageBean"/>
	 
	<!-- di에서 필요한 객체 -->
	<!-- Setter Injection : set메소드를 통한 주입 -->
	<bean id="tv2" class="com.spring.di.SamsungTV">
		<!-- property name은 SamsungTV의 private Speaker speaker; 멤버변수 이름과 맞춰야 함 -->
		<!-- SamsungTV의  -->
		<property name="speaker" ref="sony"/>
	</bean> 
	<bean id="sony" class="com.spring.di.SonySpeaker"/>
	<bean id="tv3" class="com.spring.di.LgTV">
		<constructor-arg ref="sony"/> <!-- 인자를 받는 생성자 -->
		<constructor-arg value="200000"/> <!-- 인자를 받는 생성자 -->
	</bean>
</beans>
